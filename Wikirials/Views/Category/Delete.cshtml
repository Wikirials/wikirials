@model Wikirials.Models.Category

@{
    ViewBag.Title = "Delete";
}

<h2>Delete category</h2>

<h3>Are you sure you want to delete the @Html.DisplayFor(model => model.Description) category?</h3>
<div>
    @*<h4>Category</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.Description)*@
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color category">
            <input type="submit" value="Delete" class="btn btn-default category" /> |
            <div class="category delete">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    }
</div>
